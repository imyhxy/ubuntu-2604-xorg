--- a/debian/rules
+++ b/debian/rules
@@ -26,1 +26,2 @@
-	-Dwayland_eglstream=true
+	-Dwayland_eglstream=true \
+	-Dx11=true
diff --git a/debian/mutter-common-bin.install b/debian/mutter-common-bin.install
